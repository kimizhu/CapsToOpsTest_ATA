{
  // Enforing options
  "curly": true,
  "eqeqeq": true,
  "immed": true,
  "indent": 4,
  "latedef": "nofunc",
  "newcap": true,
  "noempty": true,
  "nonbsp": true,
  "nonew": true,
  "strict": true,
  "trailing": true,
  "undef": true,
  "trailing": true,
  // Relaxing options
  "laxbreak": true,
  "debug": true,
  // Environments
  "browser": true,
  "predef": [
    // Project
    "$", "require", "requirejs", "define", "console", "module", "onmessage", "postMessage", "opencomment",

    // 3-rd party component
    "hljs", "OpenComment", "Ajv"
  ], 
  "globals": {
    "onmessage": true
  }
 
}
