<!DOCTYPE html>
<html class="no-js" lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="ms.pagetype" content="reference" />
    <meta name="ms.sitename" content="DOCS" />
    {{ metadata }}
    <title>{{ page.title }}</title>
    {% style _themes/css/reference.css %}
  </head>
  <body>

    {% include header.html %}

    <div id="sidebar" ms.cmpgrp="intopic toc">
      <nav class="navigation">
      </nav>
    </div>

    <div id="main" ms.pgarea="body">
      <div id="menu-bar-container">
        <div id="menu-bar">
          <ul id="menu-actions" class="menu-item menu-group first list-clean" ms.cmpgrp="social">
            <li><a href="{{ page.content_git_url }}" class="button is-primary is-small"><i class="icon icon-edit"></i>{% loc edit %}</a></li>
            <li><a href="{{ page.source_url}}" class="button is-primary is-small"><i class="icon icon-code"></i>{% loc view.source %}</a></li>
            <li><a href="#" class="button is-primary is-small sharebutton"><i class="icon icon-share"></i>{% loc share %}</a></li>
          </ul>
          <div class="menu-group" ms.cmpgrp="reference menu">
            {% if page.platforms != null %}
            <div id="menu-platform" class="menu-item dropdown-container">
              <label for="dropdown">{% loc platform %}</label>
              <div class="dropdown">
                <select id="platform-selector">
                {% for platform in page.platforms %}
                  <option value="platform-{{ platform }}">{{ platform }}</option>
                {% endfor %}
                </select>
              </div>
            </div>
            {% endif %}
            {% if page.langs != null %}
            <div id="menu-lang" class="menu-item dropdown-container">
              <div class="dropdown">
                <label for="dropdown">{% loc language %}</label>
                <select id="lang-selector">
                  {% for lang in page.langs %}
                  <option value="lang-{{ lang }}">{{ lang }}</option>
                  {% endfor %}
                </select>
              </div>
            </div>
            {% endif %}
          </div>
          <div id="menu-theme" class="dropdown-container menu-group menu-theme">
            <div class="dropdown">
              <label for="dropdown">{% loc theme %}</label>
              <select id="theme-selector">
                <option value="">{% loc theme.light %}</option>
                <option value="theme-night">{% loc theme.dark %}</option>
                <option value="theme-hot-dog">{% loc theme.hotdog %}</option>
              </select>
            </div>
          </div>
        </div>
        <div id="menu-expand">
          <h6>
            <span id="menu-expand-text">{% loc more %} </span>
            <span id="menu-expand-icon" class="icon icon-down-arrow"></span>
          </h6>
        </div>
        <div id="menu-nav" class="dropdown-container">
          <div class="dropdown dropdown-full mobilenavi">
            <select>
            </select>
          </div>
        </div>
      </div>

      <div class="share-container">
        <li><a href="" class="share-twitter"><i class="icon icon-twitter"></i><span> {% loc twitter %}</span></a></li>
        <li><a href="" class="share-facebook"><i class="icon icon-facebook">&#xf09a;</i><span> {% loc facebook %}</span></a></li>
        <!--<li><a href="" class="share-slack"><i class="icon icon-slack">&#xf198;</i><span> {% loc slack %}</span></a></li>-->
      </div>

      <article id="main-content">
      {{ content }}
      </article>
    </div>

    <div id="openFeedbackContainer" class="openfeedback-container" style="position: absolute;"></div>

    {% js _themes/javascript/reference.js %}

  </body>
</html>
